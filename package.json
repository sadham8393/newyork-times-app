    ],
    "testPathIgnorePatterns": [
      "index.tsx",
      "index.ts",
      "types.ts",
      "types.tsx",
      "/src/reportWebVitals.ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$"
