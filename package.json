    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watchAll --config jest.config.ts",
