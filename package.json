    "jest-environment-jsdom": "^29.7.0",
    "jiti": "^2.4.2",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "redux-mock-store": "^1.5.5",
    "redux-saga-test-plan": "^4.0.6",
    "sonarqube-scanner": "^4.3.0",
    "tailwindcss": "^4.1.4",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
